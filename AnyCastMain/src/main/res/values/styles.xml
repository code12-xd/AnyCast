<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Widget.App.Toolbar" parent="Widget.AppCompat.Toolbar">
        <item name="android:gravity">center_vertical</item>
        <item name="contentInsetStart">0dp</item>
    </style>

    <style name="CollapsingToolbarTitleStyle.About" parent="@android:style/TextAppearance">
        <item name="android:textColor">@android:color/transparent</item>
    </style>

    <!--ToolBar TextSize style-->
    <style name="ToolBar.TitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="SimpPreference" parent="Preference.Material" tools:ignore="ResourceCycle">
        <item name="allowDividerAbove">false</item>
        <item name="allowDividerBelow">true</item>
        <item name="singleLineTitle">false</item>
        <item name="iconSpaceReserved">false</item>
    </style>
</resources>
